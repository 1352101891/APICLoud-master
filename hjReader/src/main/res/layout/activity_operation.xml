<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/first_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_step"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorItemTip"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/second_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_step"
        android:layout_below="@+id/first_step"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorItemTip"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/third_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_step"
        android:layout_below="@+id/second_step"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorItemTip"
        android:textSize="18sp" />

</RelativeLayout>
