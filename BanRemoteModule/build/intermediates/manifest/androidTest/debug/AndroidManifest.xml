    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 乐鑫配置库中使用的权限（WIFI组播） -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.ykan.sdk.example.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.ykan.sdk.example.YKCodeAPIActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name="com.ykan.sdk.example.YKWifiConfigActivity" />
        <activity android:name="com.ykan.sdk.example.YKWifiDeviceControlActivity" />
        <activity android:name="com.ykan.sdk.example.AirControlActivity" />
        <activity android:name="com.ykan.sdk.example.DeviceListActivity" />

        <meta-data
            android:name="yk_key"
            android:value="yk15349258932063" /> <!-- yk_key需要向我公司申请 格式为：ykxxxxxx -->
        <activity android:name="com.ykan.sdk.example.SchedulerListActivity" />
        <activity android:name="com.ykan.sdk.example.other.OneKeyMatchActivity" />
    </application>

</manifest>